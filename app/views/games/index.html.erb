<div class="mx-auto w-11/12 max-w-lg text-center my-10">
  <div class="flex justify-between mb-4">
        <h1 class="text-2xl font-bold">登録済みゲーム一覧</h1>
        <%= link_to "NEW", new_game_path, class: "link link-hover" %>
  </div>
  <div class="overflow-x-auto">
    <table class="table">
      <tbody>
        <% @games.each do |game| %>
          <tr>
            <td><%= game.name %></td>
            <td><%= link_to '編集', edit_game_path(game), class: 'btn btn-accent btn-sm' %></td>
            <td><%= link_to '削除',
                    game_path(game),
                    class: 'btn btn-secondary btn-sm',
                    data: { turbo_method: :delete} %></td>

          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>