<%= form_with model: budget, local: true, class: "space-y-5" do |f| %>
    <label class="form-control w-full max-w-xs">
      <div class="label">
        <span class="label-text">年 ※必須</span>
      </div>
      <%= f.select :year, (2000..Date.today.year).to_a.reverse, { prompt: '年を選択' }, class: 'select select-bordered w-full max-w-xs' %>
    </label>
    <label class="form-control w-full max-w-xs">
      <div class="label">
        <span class="label-text">月 ※必須</span>
      </div>
      <%= f.select :month, (1..12).to_a, { prompt: '月を選択' }, class: 'select select-bordered w-full max-w-xs' %>
    </label>
    <label class="form-control w-full max-w-xs">
      <div class="label">
        <span class="label-text">予算 ※必須</span>
      </div>
      <%= f.text_field :amount, placeholder: "¥", class: "input input-bordered w-full max-w-xs" %>
    </label>
    
    <%= f.submit "登録", class: 'btn btn-primary'  %>
<% end %>